<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:clickable="true"
    android:padding="0dp"
    app:cardBackgroundColor="@color/card_back"
    app:cardElevation="5dp"
    app:contentPadding="0dp"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/nethunt_relative_layout">

        <ImageView
            android:layout_height="400dp"
            android:layout_width="match_parent"
            android:src="@drawable/net"
            android:scaleType="centerCrop"
            android:alpha="0.5"
            android:id="@+id/nethunt_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:text="Wanna Play?"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Let's Play"
            android:id="@+id/start_nethunt"
            android:onClick="start_nethunt"
            android:layout_alignBottom="@+id/nethunt_img"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_border"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>


